{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>diggsweden/.github:renovate-base"
  ],
  "enabledManagers": [
    "github-actions",
    "gradle",
    "maven",
    "dockerfile"
  ],
  "packageRules": [
    {
      "description": "Java dependencies - Major updates",
      "matchManagers": [
        "gradle",
        "maven"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "java",
        "dependencies",
        "major-update"
      ],
      "groupName": "java major"
    },
    {
      "description": "Java dependencies - Non-major updates",
      "matchManagers": [
        "gradle",
        "maven"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "addLabels": [
        "java",
        "dependencies"
      ],
      "groupName": "java non-major"
    },
    {
      "description": "Apache Maven plugins",
      "groupName": "maven-plugins",
      "matchPackageNames": [
        "/^org\\.apache\\.maven\\.plugins:/"
      ]
    },
    {
      "description": "Spring dependencies - Major updates",
      "groupName": "spring major",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major-update",
        "spring"
      ],
      "matchPackageNames": [
        "org.springframework{/,}**",
        "org.springdoc{/,}**",
        "/org.springframework.boot:spring-boot-gradle-plugin/",
        "/org.springframework.boot:spring-boot-maven-plugin/",
        "/io.spring.dependency-management/"
      ]
    },
    {
      "description": "Spring dependencies - Non-major updates",
      "groupName": "spring non-major",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "labels": [
        "spring"
      ],
      "matchPackageNames": [
        "org.springframework{/,}**",
        "org.springdoc{/,}**",
        "/org.springframework.boot:spring-boot-gradle-plugin/",
        "/org.springframework.boot:spring-boot-maven-plugin/",
        "/io.spring.dependency-management/"
      ]
    },
    {
      "description": "Group Nimbusds dependencies",
      "groupName": "nimbusds",
      "matchPackageNames": [
        "com.nimbusds{/,}**"
      ]
    },
    {
      "description": "Group ZXing dependencies",
      "groupName": "zxing",
      "matchPackageNames": [
        "com.google.zxing{/,}**"
      ]
    },
    {
      "description": "Development tools",
      "groupName": "dev tools",
      "matchPackageNames": [
        "org.projectlombok:lombok",
        "me.paulschwarz:spring-dotenv",
        "commons-io:commons-io"
      ]
    },
    {
      "description": "Monitoring dependencies",
      "groupName": "monitoring",
      "matchPackageNames": [
        "io.micrometer:micrometer-registry-prometheus"
      ]
    },
    {
      "description": "Docker base images",
      "matchManagers": ["dockerfile"],
      "addLabels": ["docker", "infrastructure"]
    }
  ]
}
